<Window x:Class="TesterForImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterForImages"
        mc:Ignorable="d"
        Title="Tester For Tool" Height="687" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="myTaskTemplate">
            <Border>
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Source = sprite}"/>
                </Border.Background>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ListBox x:Name="Tiles" HorizontalAlignment="Left" Height="687" Margin="0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center">
            <ListBoxItem>
                <Border Width="40" Height="40" Margin="0,5,0,0" RenderTransformOrigin=".473, 2.192">
                    <Border.Background>
                        <ImageBrush x:Name="ImageHolder" ImageSource="{Binding sprite}"/>
                    </Border.Background>
                </Border>
            </ListBoxItem>
        </ListBox>
        <Grid x:Name="TileMap"  HorizontalAlignment="Left" Height="687" Margin="105,0,0,0" VerticalAlignment="Top" Width="687" ShowGridLines="True"/>
    </Grid>
</Window>
